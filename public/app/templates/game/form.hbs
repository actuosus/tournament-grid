<div class="control-row">
    <input type="text" name="title" class="title" placeholder="Title" {{bindAttr value="view.title"}} required="required" title="The title is required."/>
</div>

<div class="control-row">
    <input type="url" name="link" class="link" placeholder="Link" {{bindAttr value="view.link"}}  required="required" title="The link is required."/>
</div>

<div class="control-row">
    <button type="submit" class="btn btn-primary save-btn">{{loc '_save'}}</button>
    <button type="button" class="btn cancel-btn">{{loc '_cancel'}}</button>
</div>
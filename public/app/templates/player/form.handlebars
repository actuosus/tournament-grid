<div class="control-row">
    {{view App.CountrySelectView controllerBinding="App.countriesController" placeholder="Country"}}
</div>

<div class="control-row">
    <input type="text" name="nickname" class="nickname" placeholder="Nickname" {{bindAttr value="view.nickname"}} />
</div>

<div class="control-row">
    <input type="text" name="first-name" class="first-name" size="10" placeholder="First name" {{bindAttr value="view.firstName"}} />
    <input type="text" name="middle-name" class="middle-name" size="10" placeholder="Middle name" {{bindAttr value="view.middleName"}} />
    <input type="text" name="last-name" class="last-name" size="10" placeholder="Last name" {{bindAttr value="view.lastName"}} />
</div>

<div class="control-row">
    <button class="btn btn-primary save-btn">{{loc '_save'}}</button>
    <button class="btn cancel-btn">{{loc '_cancel'}}</button>
</div>
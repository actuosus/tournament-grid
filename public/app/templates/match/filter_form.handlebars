<form class="selector row b-filter" xmlns="http://www.w3.org/1999/html">
    <div class="cf">
        <div class="span1">
            <label>{{loc '_matches'}}</label>
        </div>
        <div class="columnLeft">

            <label>
                <span>{{loc '_type'}}:</span>
                {{view App.SelectView contentBinding=App.matchTypes promt="Все"}}
            </label>
            <label>
                <span>{{loc '_team'}}:</span>
                {{view App.ComboBoxView controllerBinding=App.teamsController promt="Все"}}
            </label>
            <label>
                <span>За время:</span>
                {{view App.SelectView contentBinding=App.peroids}}
            </label>

            <button type="button" class="btn btn-large search-btn submit" title="Отфильтровать" {{action filter}}><i class="icon-search icon-white"></i></button>
        </div>
    </div>
</form>